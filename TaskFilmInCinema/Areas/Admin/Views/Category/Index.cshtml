@model IEnumerable<TaskFilmInCinema.Models.Category>

<h2 class="mb-3">Categories</h2>

<p>
    <a asp-area="Admin" asp-action="Create" class="btn btn-success">Create New Category</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Cat_Id</th>
            <th>Name</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Cat_Id</td>
                <td>@item.Name</td>
                <td>@item.Status</td>
                <td>
                    @if (item.Status == 1)
                    {
                        <a asp-area="Admin" asp-action="Edit" asp-route-id="@item.Cat_Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-area="Admin" asp-action="Delete" asp-route-id="@item.Cat_Id" class="btn btn-danger btn-sm">Delete</a>
                    }
                    else
                    {
                        <span class="text-muted">No actions</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>