@model TaskFilmInCinema.Models.Movie

<h2>Delete Movie</h2>

<h4>Are you sure you want to delete this movie?</h4>

<div class="card p-3 mb-3" style="max-width:400px;">
    <div><strong>Name:</strong> @Model.Name</div>
    <div><strong>Description:</strong> @Model.Description</div>
    <div><strong>Price:</strong> @Model.Price</div>
    <div><strong>Date:</strong> @Model.Date.ToString("g")</div>
    <div><strong>Cinema:</strong> @Model.Cinema?.Img</div>
    <div><strong>Category:</strong> @Model.Category?.Name</div>
    <div>
        <strong>Actors:</strong>
        @foreach (var ma in Model.MovieActors)
        {
            <span style="margin-right:5px;">@ma.Actor?.Act_Id</span>
        }
    </div>
    <div class="mt-2">
        @if (!string.IsNullOrEmpty(Model.MainImg))
        {
            <img src="/MovieImages/@Model.MainImg" width="100" />
        }
        @if (!string.IsNullOrEmpty(Model.SubImg))
        {
            <img src="/MovieImages/@Model.SubImg" width="100" />
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Delete" asp-route-id="@Model.Mov_Id" class="btn btn-danger"
       onclick="return confirm('This action cannot be undone. Are you sure?');">
        Delete
    </a>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</div>