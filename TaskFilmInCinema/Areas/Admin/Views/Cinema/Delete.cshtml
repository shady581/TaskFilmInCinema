@model TaskFilmInCinema.Models.Cinema

<h2>Delete Cinema</h2>

<h4>Are you sure you want to delete this cinema?</h4>

@if (!string.IsNullOrEmpty(Model.Img))
{
    <div>
        <img src="/CinemaImage/@Model.Img" width="150" />
    </div>
}

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Cin_Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>